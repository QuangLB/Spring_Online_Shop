	<div class="container d-inline text-center">
		<h1 class="text-info">List Product</h1>
		<hr>
		<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
			<c:forEach var="product" items="${listProduct}">
				<div class="col-3" style="width: 49%">
					<div class="card mb-4 rounded-3 shadow-sm">
						<div class="card-header py-3">
							<h6 class="my-0 fw-normal d-inline">Name: ${ product.name }</h6>
						</div>
						<div class="card-body">
							<a target="_blank"><img style="height: 170px" alt=""
								src="${product.image}"></a>
						</div>
						<div>
							<h6>
								Price :
								<fmt:formatNumber type="number" groupingUsed="true"
									value="${ product.price}" />
								Ä‘
							</h6>
						</div>
						<div class="d-grid gap-2 d-md-block">
							<a href="/admin/product/edit/${ product.id }"
								class="btn btn-primary">Edit</a> <a
								href=""
								class="btn btn-danger" onclick="del (${ product.id })">Remove</a>
							<hr>
							<br>
						</div>
					</div>
				</div>
			</c:forEach>
		</div>
	</div>
	<div class="container">
		<footer class="row row-cols-5 py-5 my-5 border-top">
			<div class="col">
				<a href="/"
					class="d-flex align-items-center mb-3 link-dark text-decoration-none">
